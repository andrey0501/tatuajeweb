<!--PROMOCIONES-->
<div class="testimonial">
    <div class="container">
        <div class="section-header">
            <h2>Promociones</h2>
        </div>

        @if (Model.Count > 0 && Model != null)
        {
            <div class="owl-carousel testimonials-carousel">
                @foreach (var item in Model)
                {

                    <div class="testimonial-item">
                        <p>
                            @item.nom_Promocion
                        </p>
                    </div>

                }
            </div>
        }
        else
        { <p>Por el momento no existen promociones disponibles.</p>}
    </div>
</div>

<!--FOOTER-->
<div class="contact">
    <div class="container">
        <div class="section-header">
            <p>Contactenos</p>
            <h2>Contactenos si tiene alguna consulta</h2>
        </div>
        <div class="row align-items-center">
            <div class="col-md-5">
                <div class="contact-info">
                    <div class="contact-icon">
                        <i class="fa fa-map-marker-alt"></i>
                    </div>
                    <div class="contact-text">
                        <h3>Ubicación</h3>
                        <p>25 sur del Banco Popular, Antigua 27calle 1, Naranjo, Alajuela, Costa Rica</p>
                    </div>
                </div>
                <div class="contact-info">
                    <div class="contact-icon">
                        <i class="fa fa-phone-alt"></i>
                    </div>
                    <div class="contact-text">
                        <h3>Número teléfono</h3>
                        <p>+506 6360 9190</p>
                    </div>
                </div>
                <div class="contact-info">
                    <div class="contact-icon">
                        <i class="fa fa-envelope"></i>
                    </div>
                    <div class="contact-text">
                        <h3>Email</h3>
                        <p>newskullnaranjoc@gmail.com</p>
                    </div>
                </div>
            </div>
            <div class="col-md-7">
                <div class="contact-form">
                    <div id="success"></div>
                    <form name="sentMessage" id="contactForm" novalidate="novalidate">
                        @Html.AntiForgeryToken()
                        <div class="control-group">
                            <input type="text" class="form-control" id="name" placeholder="Nombre" required="required" data-validation-required-message="Por favor ingrese su nombre" />
                            <p class="help-block text-danger"></p>
                        </div>
                        <div class="control-group">
                            <input type="email" class="form-control" id="email" placeholder="Email" required="required" data-validation-required-message="Por favor ingrse su email" />
                            <p class="help-block text-danger"></p>
                        </div>
                        <div class="control-group">
                            <input type="text" class="form-control" id="subject" placeholder="Asunto" required="required" data-validation-required-message="Por favor ingrese el asunto" />
                            <p class="help-block text-danger"></p>
                        </div>
                        <div class="control-group">
                            <textarea class="form-control" id="message" placeholder="Mensaje" required="required" data-validation-required-message="Por favor ingrese el mensaje"></textarea>
                            <p class="help-block text-danger"></p>
                        </div>
                        <div>
                            <button class="btn btn-primary" type="submit" id="sendMessageButton">Enviar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>




